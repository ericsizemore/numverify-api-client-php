{
    "name": "esi/numverify-api-client-php",
    "description": "Numverify API Client for PHP",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "numverify",
        "api",
        "client",
        "phone number",
        "carrier lookup",
        "validate phone number",
        "country codes",
        "dialing codes"
    ],
    "authors": [
        {
            "name": "Eric Sizemore",
            "email": "admin@secondversion.com",
            "homepage": "https://www.secondversion.com/",
            "role": "Fork Developer"
        },
        {
            "name": "Mark Rogoyski",
            "email": "mark@rogoyski.com",
            "homepage": "https://github.com/markrogoyski",
            "role": "Original Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/ericsizemore/numverify-api-client-php/issues",
        "forum": "https://github.com/ericsizemore/numverify-api-client-php/discussions",
        "source": "https://github.com/ericsizemore/numverify-api-client-php/tree/master",
        "security": "https://github.com/ericsizemore/numverify-api-client-php/security/policy"
    },
    "require": {
        "php": "^8.2 <8.5",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.9",
        "kevinrob/guzzle-cache-middleware": "^6.0",
        "symfony/cache": "^7.1"
    },
    "require-dev": {
        "esi/phpunit-coverage-check": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^11.4",
        "psalm/plugin-phpunit": "^0.19.0",
        "vimeo/psalm": "dev-master"
    },
    "replace": {
        "markrogoyski/numverify-api-client-php": "^2.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Numverify\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Numverify\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "scripts": {
        "coverage": "vendor/bin/coverage-check build/logs/clover.xml 100",
        "cs:check": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff",
        "cs:fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon",
        "psalm": "vendor/bin/psalm -c psalm.xml --no-diff",
        "static-analysis": [
            "@phpstan",
            "@psalm"
        ],
        "test": "phpunit",
        "test:coverage": [
            "@test",
            "@coverage"
        ]
    }
}
